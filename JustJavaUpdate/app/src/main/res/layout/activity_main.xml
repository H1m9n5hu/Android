<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pexels_lood_goosen"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="@string/enter_your_name"
                android:textColor="#FFFF00"
                android:textColorHint="#800000"
                android:textSize="24dp"
                />

            <TextView
                android:id="@+id/textView"
                style="@style/customText"
                android:layout_marginLeft="16dp"
                android:textColor="#A9A9A9"
                android:text="@string/toppings" />

            <CheckBox
                android:id="@+id/checkBox"
                style="@style/customText"
                android:layout_marginLeft="16dp"
                android:paddingLeft="24dp"
                android:text="@string/whipped_cream"
                android:textColor="#F5FFFA"
                android:buttonTint="#FFFFFF"
                />

            <CheckBox
                android:id="@+id/checkBox1"
                style="@style/customText"
                android:layout_below="@id/checkBox"
                android:layout_marginLeft="16dp"
                android:paddingLeft="24dp"
                android:textColor="#D2691E"
                android:text="@string/chocolate"
                android:buttonTint="#FFFFFF"
                />

            <TextView
                android:id="@+id/text_View"
                style="@style/customText"
                android:paddingLeft="16dp"
                android:textColor="#FFFFE0"
                android:text="@string/quantity" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                >

                <Button
                    android:id="@+id/button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:backgroundTint="#2F4F4F"
                    android:onClick="decreament"
                    android:text="-"
                    android:textColor="#00FFFF"
                    />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/customText"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:onClick="increament"
                    android:backgroundTint="#2F4F4F"
                    android:text="+"
                    android:textColor="#00FFFF"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_id"
                    style="@style/customText"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:onClick="submitOrder"
                    android:text="@string/order"
                    android:backgroundTint="#000000"
                    android:textColor="#FFFFFF"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>