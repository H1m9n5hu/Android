<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pixabay"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:fontFamily="cursive"
            android:text="Company Name"
            android:textColor="#FFFF00"
            android:textSize="37sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="262dp"
            android:layout_below="@id/textView2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/audibicycle" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:fontFamily="cursive"
            android:text="Star Bicycles"
            android:textColor="#FFFF00"
            android:textSize="65sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="14dp"
            android:text="Company Website - Www.StarBicycles.Com"
            android:fontFamily="cursive"
            android:textColor="#FFFF00"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="14dp"
            android:text="E-mail Id - hs098605@gmail.com"
            android:fontFamily="cursive"
            android:textColor="#FFFF00"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="14dp"
            android:text="Help-line No. - 9079050683"
            android:fontFamily="cursive"
            android:textColor="#FFFF00"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="326dp"
            android:layout_height="169dp"
            android:layout_below="@id/textView6"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="18dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="31dp"
            android:fontFamily="cursive"
            android:text="The Founder of this company is Mr.Himanshu Singh and CEO of this company is also Mr.Himanshu Singh."
            android:textColor="#FFFF00"
            android:textSize="27sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>